<!-- Generic Quadrotor Model -->
<!-- Simplified model for faster training -->

<mujoco model="quadrotor_generic">
  <compiler angle="radian" coordinate="local" inertiafromgeom="false"/>
  
  <option timestep="0.002" gravity="0 0 -9.81" integrator="RK4"/>
  
  <default>
    <geom contype="1" conaffinity="1" friction="0.8 0.02 0.01"/>
    <motor ctrllimited="true" ctrlrange="0 1"/>
  </default>
  
  <asset>
    <texture type="2d" name="grid" builtin="checker" rgb1="0.1 0.2 0.3" rgb2="0.2 0.3 0.4" 
             width="512" height="512"/>
    <material name="grid" texture="grid" texrepeat="8 8"/>
    <material name="drone" rgba="0.3 0.3 0.3 1"/>
  </asset>
  
  <worldbody>
    <geom name="ground" type="plane" size="50 50 0.1" material="grid"/>
    <light directional="true" diffuse="0.8 0.8 0.8" pos="0 0 5"/>
    
    <body name="quadrotor" pos="0 0 0.5">
      <freejoint name="root"/>
      <inertial pos="0 0 0" mass="1.5" diaginertia="0.02 0.02 0.04"/>
      
      <!-- Simplified body geometry -->
      <geom name="body" type="box" size="0.15 0.15 0.03" material="drone"/>
      
      <!-- Thrust sites at motor positions -->
      <site name="thrust1" pos="0.15 0.15 0.02" size="0.02"/>
      <site name="thrust2" pos="-0.15 0.15 0.02" size="0.02"/>
      <site name="thrust3" pos="-0.15 -0.15 0.02" size="0.02"/>
      <site name="thrust4" pos="0.15 -0.15 0.02" size="0.02"/>
      
      <site name="imu" pos="0 0 0" size="0.01"/>
    </body>
  </worldbody>
  
  <sensor>
    <gyro name="gyro" site="imu"/>
    <accelerometer name="accel" site="imu"/>
    <framepos name="pos" objtype="site" objname="imu"/>
    <framequat name="quat" objtype="site" objname="imu"/>
    <framelinvel name="linvel" objtype="site" objname="imu"/>
    <frameangvel name="angvel" objtype="site" objname="imu"/>
  </sensor>
  
  <actuator>
    <general name="motor1" site="thrust1" gear="0 0 6 0 0 0.06" ctrlrange="0 1"/>
    <general name="motor2" site="thrust2" gear="0 0 6 0 0 -0.06" ctrlrange="0 1"/>
    <general name="motor3" site="thrust3" gear="0 0 6 0 0 0.06" ctrlrange="0 1"/>
    <general name="motor4" site="thrust4" gear="0 0 6 0 0 -0.06" ctrlrange="0 1"/>
  </actuator>
</mujoco>
